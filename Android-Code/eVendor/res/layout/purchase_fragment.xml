<?xml version="1.0" encoding="utf-8"?>
        <RelativeLayout
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          android:layout_width="fill_parent" 
          android:layout_height="fill_parent"
        >
        
        <LinearLayout
            android:id="@+id/libaray_filter_menu1"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="@drawable/header_bg"
            android:visibility="gone"
            android:weightSum="100" >

        <Button 
            android:id="@+id/transaction"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:text="TRANSACTION"
            android:textSize="15dip"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"
            android:layout_weight="32.6"
            android:background="@null"
           
         />
        
        <ImageView
            
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:src="@drawable/sap1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
          />
        
        <TextView 
            android:id="@+id/amountDetail"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dip"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#00f5ff"
            android:layout_weight="32.6"
          />
        
        <ImageView
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:src="@drawable/sap1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
          />
        
        <Button 
            android:id="@+id/purchase"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:text="PURCHASE   "
            android:textSize="15dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="32.6"
            android:background="@null"
            android:textColor="#00f5ff"
           
            
          />
        </LinearLayout>
        
        <ListView
            android:id="@+id/commonListView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/libaray_filter_menu1" />

        <ListView
        android:id="@+id/commonListView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/libaray_filter_menu1"
        android:visibility="gone" />

</RelativeLayout>