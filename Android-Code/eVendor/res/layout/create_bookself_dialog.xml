<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:padding="4dp" >

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        android:text="@string/dialog_title"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <View
        android:id="@+id/v_sep"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_dialog_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:background="#1A1817" />

    <LinearLayout
        android:id="@+id/lltitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_sep"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="26dp"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title:"
            android:textColor="#fff"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/comment"
            android:layout_width="200dp"
            android:layout_height="40dip"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Bookshelf name"
            android:maxLength="100"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold" >

          
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llcolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lltitle"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color:"
            android:textColor="#fff"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/bookself_color"
            android:layout_width="200dp"
            android:layout_height="40dip"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:focusable="false"
            android:gravity="center"
            android:hint="Shelf color"
            android:maxLength="100"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llcolor"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cmdlg_possitive"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_blue_small"
            android:text="Button1"
            android:textColor="#ffffff"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_cmdlg_negative"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_red"
            android:text="Button2"
            android:textColor="#ffffff"
            android:visibility="visible" />

    </LinearLayout>

</RelativeLayout>