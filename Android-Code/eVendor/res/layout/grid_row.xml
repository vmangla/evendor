<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="5dip"
    android:gravity="right" >

    <TextView
        android:id="@+id/grid_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:text="Book Title"
        android:textColor="@android:color/white"
        android:textSize="13sp" />
<RelativeLayout
        android:id="@+id/view"
        android:layout_width="89dip"
        android:layout_height="105dip"
        android:layout_below="@id/grid_label"
        android:background="@android:color/transparent"
        android:gravity="center"
    
         >
    <RelativeLayout
        android:id="@+id/rlgrid_image"
        android:layout_width="82dip"
        android:layout_height="100dip"
       
        android:background="#00f5ff"
        android:gravity="center"
        android:padding="3dp"
        android:src="@drawable/book" >

        <ImageView
            android:id="@+id/grid_image"
            android:layout_width="79dip"
            android:layout_height="97dip"
            android:background="@drawable/book" />
        
    </RelativeLayout>

    <TextView
        android:id="@+id/imagegroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/greengradient"
        android:paddingBottom="1dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="1dp"
        android:text="G"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</RelativeLayout>
    <ImageView
        android:id="@+id/get_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/view"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="25dip"
        android:src="@drawable/get_button" />
  
    <LinearLayout
        android:id="@+id/llsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/get_button"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size:"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="#00f5ff"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llsize"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price:"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="$70"
            android:textColor="#00f5ff"
            android:textSize="12sp" />
    </LinearLayout>
<TextView
        android:id="@+id/textView001"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llprice"
        android:layout_marginLeft="3dp"
        android:text="TextView"
        android:singleLine="true"
        android:textColor="#00f5ff"
        android:textSize="12dp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView001"
        android:layout_marginLeft="3dp"
        android:text="TextView"
          android:singleLine="true"
        android:textColor="#00f5ff"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="3dp"
        android:text="TextView"
          android:singleLine="true"
        android:textColor="#00f5ff"
        android:textSize="12dp" />

    <RatingBar
        android:id="@+id/ratingbar_default"
        style="@style/foodRatingBarSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:numStars="5" />

  
</RelativeLayout>