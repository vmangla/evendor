<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="10dp" >
    
    <TextView
        android:id="@+id/tv_dialog_title1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal"
        android:text="@string/dialog_title"
        android:textColor="#00f5ff"
        android:textSize="16sp" />
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/thumb"
            android:layout_width="100dip"
            android:layout_height="120dip"
            android:padding="5dip" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/thumb"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="0dip"
                android:layout_marginTop="0dip"
                android:ellipsize="end"
                android:maxLength="25"
                android:singleLine="true"
                android:text="Simple"
                android:textColor="#00f5ff"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author:"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/author1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="0dip"
                    android:text="Simple"
                    android:textColor="#00f5ff"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Publisher:"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/pulisher1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="0dip"
                    android:text="Simple"
                    android:textColor="#00f5ff"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Published Date:"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pulish_date1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="0dip"
                    android:text="Simple"
                    android:textColor="#00f5ff"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size:"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/book_price1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="0dip"
                    android:text="Simple"
                    android:textColor="#00f5ff"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/text_area" >
    
    <TextView
        android:id="@+id/description1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Simplekkkkkkkk"
        android:textColor="#1A1817"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:textSize="16sp"
         />
    
    </ScrollView>
     <LinearLayout
        android:id="@+id/btn_linear1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	   
	   
	    android:orientation="vertical"
	   
	  
	    >
      
	    <Button
	        android:id="@+id/btn_read"
	        android:layout_width="fill_parent"
	        android:layout_height="35dp"
	        android:layout_marginBottom="4dp"
	        android:layout_marginLeft="4dp"
	        android:layout_marginRight="2dp"
	        android:background="@drawable/btn_blue_small"
	        android:text="Read"
	        android:textColor="#fff"
	        android:visibility="visible" />
         
    <LinearLayout
        android:id="@+id/btn_linear2"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="4dp"
	   
	    android:orientation="horizontal"
	   
	  
	    >
	    
	    <Button
	        android:id="@+id/btn_move"
	        android:layout_width="0dp"
	        android:layout_height="35dp"
	        android:layout_marginRight="2dp"
	        android:layout_weight="1"
	        android:background="@drawable/btn_blue_small"
	        android:text="Move"
	        android:textColor="#fff"
	        android:visibility="visible" />
	    
	     <Button
	         android:id="@+id/btn_delete"
	         android:layout_width="0dp"
	         android:layout_height="35dp"
	         android:layout_marginLeft="2dp"
	         android:layout_weight="1"
	         android:background="@drawable/btn_blue_small"
	         android:text="Delete"
	         android:textColor="#fff"
	         android:visibility="visible" />
	    
	</LinearLayout>
	
    <LinearLayout
        android:id="@+id/btn_linear11"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="4dp"
	   
	    android:orientation="horizontal"
	   
	  
	    >
	    
	    <Button
	        android:id="@+id/btn_rate"
	        android:layout_width="0dp"
	        android:layout_height="35dp"
	        android:layout_marginRight="2dp"
	        android:layout_weight="1"
	        android:background="@drawable/btn_blue_small"
	        android:text="Rate"
	        android:textColor="#fff"
	        android:visibility="visible" />
	    
	     <Button
	         android:id="@+id/btn_cancel"
	         android:layout_width="0dp"
	         android:layout_height="35dp"
	         android:layout_marginLeft="2dp"
	         android:layout_weight="1"
	         android:background="@drawable/btn_red"
	         android:text="Cancel"
	         android:textColor="#fff"
	         android:visibility="visible" />
	    
	</LinearLayout>
	
    <!-- <Button 
	        android:id="@+id/btn_cmdlg_neutral"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/xhdpi_login_button"
	        android:textColor="#1A1817"
	        android:visibility="gone"
	        android:text="Button3"
	        android:layout_below="@id/btn_linear"
	        /> -->
</LinearLayout>
</LinearLayout>

