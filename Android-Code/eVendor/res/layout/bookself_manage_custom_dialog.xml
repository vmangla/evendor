<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="#000000"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal"
        android:text="@string/dialog_title"
        android:textColor="#ffffff"
        android:textSize="16sp" />
	
	<View 
	    android:id="@+id/v_sep"
	    android:layout_below="@id/tv_dialog_title"
	    android:layout_width="fill_parent"
	    android:layout_marginTop="6dp"
	    android:layout_height="1dp"
	    android:background="#1A1817"/>
    
    <TextView
        android:id="@+id/tv_detail_tex"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/dialog_demo_tex"
        android:textColor="#ffffff" />
    
    <LinearLayout
        android:id="@+id/btn_linear"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_detail_tex"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="4dp" >
	    
	    <Button
	        android:id="@+id/btn_cmdlg_possitive"
	        android:layout_width="120dp"
	        android:layout_height="35dp"
	        android:layout_marginRight="5dp"
	        android:background="@drawable/btn_blue_small"
	        android:text="Button1"
	        android:textColor="#ffffff"
	        android:visibility="visible" />
	    
	     <Button
	         android:id="@+id/btn_cmdlg_negative"
	         android:layout_width="120dp"
	         android:layout_height="35dp"
	         android:layout_marginLeft="5dp"
	         android:background="@drawable/btn_blue_small"
	         android:text="Button2"
	         android:textColor="#ffffff"
	         android:visibility="visible" />
	    
	</LinearLayout>
	
    <Button
        android:id="@+id/btn_cmdlg_neutral1"
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:layout_below="@id/btn_linear"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_red"
        android:text="Button3"
        android:textColor="#ffffff"
        android:visibility="visible" />

</LinearLayout>

