<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/center_gray_bg"
    android:focusableInTouchMode="true"
     >

   
     
    
    <TextView 
        android:id="@+id/first_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="30dip"
        android:textSize="15sp"
        android:text="First Name"
        android:textColor="@android:color/white"
       
        />
    
    <EditText
		    android:id="@+id/first_name"
		    android:layout_width="220dip"
		    android:layout_height="35dip"
		    android:layout_below="@id/first_name_text"
            android:layout_marginLeft="30dip"
		    android:hint="First Name"
		    android:paddingLeft="10dip"
		    android:background="@drawable/login_text_area1"
		    android:singleLine="true"
		    android:textSize="15sp"
		    android:textColor="@android:color/black"
		    android:layout_marginTop="10dip"
		    android:imeOptions="actionNext"
            android:nextFocusDown="@+id/password"/>
    
    <TextView 
        android:id="@+id/last_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_below="@id/first_name"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="30dip"
        android:text="Last Name"
       
        />
    
    <EditText
		    android:id="@+id/last_name"
		    android:layout_width="220dip"
		    android:layout_height="35dip"
		    android:layout_below="@id/last_name_text"
           
		    android:hint="Last Name"
		    android:paddingLeft="10dip"
		    android:background="@drawable/login_text_area1"
		    android:textColor="@android:color/black"
		    android:singleLine="true"
		    android:textSize="15sp"
		    android:layout_marginTop="10dip"
		    android:layout_marginLeft="30dip"
		    android:imeOptions="actionNext"
            android:nextFocusDown="@+id/password"/>
    
    <TextView 
        android:id="@+id/usernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/last_name"
        android:textStyle="bold"
        android:layout_marginLeft="30dip"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dip"
        android:text="Username"
        android:textSize="15sp"
        
        />
    
    <EditText
		    android:id="@+id/userName"
		    android:layout_width="220dip"
		    android:layout_height="35dip"
		    android:layout_below="@id/usernameText"
            android:layout_marginTop="10dip"
		    android:hint="User Name"
		    android:paddingLeft="10dip"
		    android:textSize="15sp"
		    android:textColor="@android:color/black"
		    android:layout_marginLeft="30dip"
		    android:background="@drawable/login_text_area1"
		    android:inputType="textEmailAddress"
		    android:singleLine="true"
		   android:imeOptions="actionNext"
            android:nextFocusDown="@+id/cvv"
		     />
    
    
    
    
    <RelativeLayout 
    android:id="@+id/last_rl"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_below="@id/last_name"
    android:layout_toRightOf="@id/usernameText"
    android:layout_marginLeft="145dip"
    >
    
      <TextView 
        android:id="@+id/cvvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="10dip"
        android:text="Cvv"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_marginLeft="0dip"
        
        />
    
    <EditText
		    android:id="@+id/cvv"
		    android:layout_width="90dip"
		    android:layout_height="35dip"
		    android:layout_below="@id/cvvText"
		    android:hint="cvv"
		    android:paddingLeft="10dip"
		    android:textSize="15sp"
		    android:textColor="@android:color/black"
		    android:background="@drawable/login_text_area1"
		    android:inputType="textPassword"
		    android:layout_marginTop="10dip"
		    android:layout_marginLeft="0dip"
		    android:singleLine="true"
		    android:imeOptions="actionDone"
		     />
    
    <TextView 
        android:id="@+id/expiry_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cvv"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="10dip"
        android:textColor="@android:color/white"
        android:text="Expiry Date"
        android:layout_marginLeft="10dip"
        
        />
    
    <!-- <EditText
		    android:id="@+id/cvv"
		    android:layout_width="60dip"
		    android:layout_height="35dip"
		    android:layout_below="@id/expiry_date"
            android:layout_toRightOf="@id/passwordText"
		    android:hint=""
		    android:paddingLeft="10dip"
		    android:textSize="15sp"
		    android:background="@drawable/login_text_area1"
		    android:inputType="textPassword"
		    android:layout_marginTop="10dip"
		    android:layout_marginLeft="10dip"
		    android:singleLine="true"
		    android:imeOptions="actionDone"
		     /> -->
    
     <EditText
		    android:id="@+id/date"
		    android:layout_width="90dip"
		    android:layout_height="35dip"
		    android:layout_below="@id/expiry_date"
            android:layout_toRightOf="@id/cvv"
		    android:hint="date"
		    android:paddingLeft="10dip"
		    android:textSize="15sp"
		    android:textColor="@android:color/black"
		    android:background="@drawable/login_text_area1"
		    android:inputType="textPassword"
		    android:layout_marginTop="10dip"
		    android:layout_marginLeft="10dip"
		    android:singleLine="true"
		    android:imeOptions="actionDone"
		     />
    
    </RelativeLayout>
    
  
    
    <Button 
        android:id="@+id/register"
        android:layout_width="120dip"
        android:layout_height="40dip"
        android:textStyle="bold"
        android:layout_marginBottom="30dip"
        android:layout_alignParentBottom="true"
        android:text="Update"
        android:textColor="@android:color/black"
        android:background="@drawable/blue_btn"
        android:layout_centerHorizontal="true"
        
        
        />
   

</RelativeLayout>