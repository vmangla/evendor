<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="10dp" >
    
    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal"
        android:text="@string/dialog_title"
        android:textColor="#00f5ff"
        android:textSize="16sp" />
	
	<View 
	    android:id="@+id/v_sep"
	    android:layout_below="@id/tv_dialog_title"
	    android:layout_width="fill_parent"
	    android:layout_marginTop="6dp"
	    android:layout_height="1dp"
	    android:background="#1A1817"/>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/book_icon111"
            android:layout_width="100dip"
            android:layout_height="120dip"
            android:padding="5dip" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/book_icon111"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="0dip"
                android:layout_marginTop="0dip"
                android:ellipsize="end"
                android:maxLength="25"
                android:singleLine="true"
                android:text="Simple"
                android:textColor="#00f5ff"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author:"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/author"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="0dip"
                    android:text="Simple"
                    android:textColor="#00f5ff"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Publisher:"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pulisher"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="0dip"
                    android:text="Simple"
                    android:textColor="#00f5ff"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Published Date:"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pulish_date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="0dip"
                    android:text="Simple"
                    android:textColor="#00f5ff"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size:"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/book_price"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="0dip"
                    android:text="Simple"
                    android:textColor="#00f5ff"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/text_area" >
    
    <TextView
        android:id="@+id/description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Simplekkkkkkkk"
        android:textColor="#1A1817"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:textSize="16sp"
         />
    
    </ScrollView>
    <LinearLayout
        android:id="@+id/btn_linear12"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	   
	   
	    android:orientation="vertical"
	   
	  
	    >
      
	    <Button
	        android:id="@+id/btn_cmdlg_possitive"
	        android:layout_width="fill_parent"
	        android:layout_height="35dp"
	        android:layout_marginBottom="4dp"
	        android:layout_marginLeft="4dp"
	        android:layout_marginRight="2dp"
	        android:background="@drawable/btn_blue_small"
	        android:text="Read"
	        android:textColor="#fff"
	        android:visibility="visible" /> 
    <LinearLayout
        android:id="@+id/btn_linear"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="4dp"
	   
	    android:orientation="horizontal"
	   
	  
	    >
	    
	    <Button
	        android:id="@+id/btn_cmdlg_neutral"
	        android:layout_width="0dp"
	        android:layout_height="35dp"
	        android:layout_marginRight="2dp"
	        android:layout_weight="1"
	        android:background="@drawable/btn_blue_small"
	        android:text="move"
	        android:textColor="#fff"
	        android:visibility="visible" />
	    
	     <Button
	         android:id="@+id/btn_cmdlg_read"
	         android:layout_width="0dp"
	         android:layout_height="35dp"
	         android:layout_marginLeft="2dp"
	         android:layout_weight="1"
	         android:background="@drawable/btn_blue_small"
	         android:text="delete"
	         android:textColor="#fff"
	         android:visibility="visible" />
	    
	</LinearLayout>
	
    <LinearLayout
        android:id="@+id/btn_linear1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="4dp"
	   
	    android:orientation="horizontal"
	   
	  
	    >
	    
	    <Button
	        android:id="@+id/btn_cmdlg_negative1"
	        android:layout_width="0dp"
	        android:layout_height="35dp"
	        android:layout_marginRight="2dp"
	        android:layout_weight="1"
	        android:background="@drawable/btn_blue_small"
	        android:text="rate"
	        android:textColor="#fff"
	        android:visibility="visible" />
	    
	     <Button
	         android:id="@+id/btn_cmdlg_negative"
	         android:layout_width="0dp"
	         android:layout_height="35dp"
	         android:layout_marginLeft="2dp"
	         android:layout_weight="1"
	         android:background="@drawable/btn_red"
	         android:text="Button2"
	         android:textColor="#fff"
	         android:visibility="visible" />
	    
	</LinearLayout>
	</LinearLayout>
    <!-- <Button 
	        android:id="@+id/btn_cmdlg_neutral"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/xhdpi_login_button"
	        android:textColor="#1A1817"
	        android:visibility="gone"
	        android:text="Button3"
	        android:layout_below="@id/btn_linear"
	        /> -->

</LinearLayout>

