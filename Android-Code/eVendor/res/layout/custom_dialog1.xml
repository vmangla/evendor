<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dip"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="8dp" >
    
    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="@string/dialog_title"
        android:textColor="#00f5ff"
        android:textSize="16sp" />
	
	<View 
	    android:id="@+id/v_sep"
	    android:layout_below="@id/tv_dialog_title"
	    android:layout_width="fill_parent"
	    android:layout_marginTop="6dp"
	    android:layout_height="1dp"
	    android:background="#1A1817"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp" >

        <ImageView
            android:id="@+id/book_icon"
            android:layout_width="110dip"
            android:layout_height="140dip"
            android:padding="5dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/book_icon"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author:"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/author"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="0dip"
                    android:text="Simple"
                    android:textColor="#00f5ff"
                    android:textSize="14sp"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price:"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/book_price"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="0dip"
                    android:text="Simple"
                    android:textColor="#00f5ff"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="3dp" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Publisher:"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pulisher"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dip"
                    android:text="Simple"
                    android:textColor="#00f5ff"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="14sp"
                    android:text="Published date:"
                      android:textSize="14sp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/pulish_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="0dip"
                    android:text="Simple"
                    android:textColor="#00f5ff"
                    android:textSize="14sp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size:"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/book_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="0dp"
                    android:text="Simple"
                    android:textColor="#00f5ff"
                    android:textSize="14sp"
                    android:visibility="visible" />

            </LinearLayout>

            <RatingBar
                android:id="@+id/ratingbar_default"
                style="@style/foodRatingBarSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="0dip"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:numStars="5" 
                 android:visibility="gone" />

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="0dip"
                android:layout_marginTop="0dip"
                android:ellipsize="end"
                android:maxLength="25"
                android:singleLine="true"
                android:text="Simple"
                android:textColor="#00f5ff"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>
    </RelativeLayout>
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/text_area" >
    
    <TextView
        android:id="@+id/description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Simplekkkkkkkk"
        android:textColor="#1A1817"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:textSize="16sp"
         />
    
    </ScrollView>
    
    <LinearLayout
        android:id="@+id/btn_linear"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="4dp"
	   
	    android:orientation="horizontal"
	   
	  
	    >
	    
	    <Button
	        android:id="@+id/btn_cmdlg_possitive"
	        android:layout_width="0dp"
	        android:layout_height="40dp"
	        android:layout_marginRight="3dp"
	        android:layout_weight="1"
	        android:background="@drawable/btn_blue_small"
	        android:text="Button1"
	        android:textColor="#fff" />
	    
	     <Button
	         android:id="@+id/btn_cmdlg_negative"
	         android:layout_width="0dp"
	         android:layout_height="40dp"
	         android:layout_marginLeft="3dp"
	         android:layout_weight="1"
	         android:background="@drawable/btn_red"
	         android:text="Button2"
	         android:textColor="#fff" />
	    
	</LinearLayout>
	
    
    <Button 
	        android:id="@+id/btn_cmdlg_neutral"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/xhdpi_login_button"
	        android:textColor="#1A1817"
	        android:visibility="gone"
	        android:text="Button3"
	        android:layout_below="@id/btn_linear"
	        />

</LinearLayout>

